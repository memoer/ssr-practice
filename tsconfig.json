{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "~server/*": ["src/server/*"],
      "~client/*": ["src/client/*"]
    }
  },
  "include": ["src", "config"],
  "exclude": ["build", "node_modules", "public", "config/env.js", "config/paths.js"],
  "files": ["global.d.ts"]
}
